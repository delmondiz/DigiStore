@model DigiStoreWithMVC.Models.User
@{
    ViewBag.Title = "StorePage";
}
<div class="container">
    <div class="section">
        <div class="row">
            <div class="container col s12">
                <div class="parallax-container">
                    @Html.Partial("_EditStoreLogo", Model)
                </div>
            </div>

            <div class="card-panel blue darken-3">
                <h5 class="card-title yellow-text accent-3">Store Information</h5>
                <div class="card-content row">
                    <div class="card col l6 m6 s12">
                        <div class="card-content">
                            <span class="card-title">Contact</span>
                            @Html.Partial("_EditStoreInfo", Model)
                        </div>
                    </div>

                    <div class="card col l6 m6 s12">
                        <div class="card-content">
                            <span class="card-title">Store Hours</span>
                            @*@Html.Partial("_EditStoreHours", Model)*@
                            @{Html.RenderPartial("_EditStoreHours", Model); }
                        </div>
                    </div>

                    <div class="card col l6 m6 s12">
                        <div class="card-content">
                            <span class="card-title">Rate this store</span>
                            @Html.Partial("_SubmitReview", new DigiStoreWithMVC.Models.SubmitReviewViewModel())
                        </div>
                    </div>

                    <div class="card col l6 m6 s12">
                        <div class="card-content">
                            <span class="card-title">Reviews</span>
                            <p>Populated from Database.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-panel blue darken-3">
        <h5 class="card-title yellow-text accent-3">Products</h5>
        <div class="card-content row">
            @{
                if (Model != null)
                {
                    if (Model.Items.Count() > 0)
                    {
                        foreach (DigiStoreWithMVC.Models.Item item in Model.Items)
                        {
                            if (item.Deleted == null)
                            {
                                @Html.Partial("_StoreItem", item)
                            }
                            else if (!item.Deleted.Value)
                            {
                                @Html.Partial("_StoreItem", item)
                            }
                        }
                    }
                    else
                    {
                        <div class="card">
                            <h2 class="center">This store is empty.</h2>
                        </div>
                    }
                }
                else
                {
                }
            }
        </div>
    </div>
</div>
@section scripts {
<script>
    $('.dropify').dropify({
        messages: {
            'default': 'Drag and drop a file here or click',
            'replace': 'Drag and drop or click to replace',
            'remove': 'Remove',
            'error': 'Ooops, something wrong appended.'
        }
    });
</script>
}