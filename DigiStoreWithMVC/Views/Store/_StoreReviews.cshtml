@model DigiStoreWithMVC.Models.User

@if (Model != null)
{
    if (Model.Reviews != null)
    {
        if (Model.Reviews.Count > 0)
        {
        <ul class="collection">
            @foreach (DigiStoreWithMVC.Models.Review review in Model.Reviews)
            {
                <li class="collection-item">
                    Review by: @review.ReviewerName <br />
                    Reviewed on: @review.Date.ToString() <br />
                    Rating:
                    @for (int i = 0; i < review.Rating; i++)
                    {
                        <i class="material-icons tiny">grade</i>
                    }
                    <br />
                    Review: @review.ReviewText <br />
                </li>
            }
        </ul>
        }
        else
        {
            <h6>This store has no reviews.</h6>
        }
    }
    else
    {
        <h6>This store has no reviews.</h6>
    }
}
