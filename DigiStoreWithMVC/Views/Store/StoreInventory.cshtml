@model DigiStoreWithMVC.Models.User

@{
    ViewBag.Title = "Store Inventory";
}

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Your Items</span>
                        @Html.Partial("_AddItem", new DigiStoreWithMVC.Models.Item())
                        @if (Model != null)
                        {
                            if (Model.Items.Count > 0)
                            {
                                <ul id="storeInventoryList" class="collapsible" data-collapsible="accordion">
                                    @foreach (DigiStoreWithMVC.Models.Item inventoriedItem in Model.Items)
                                    {
                                        @Html.Partial("_ExistingItems", inventoriedItem)
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>There are no items in the store inventory.</p>
                            }
                        }
                        else
                        {
                            <p>There are no items in the store inventory.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $('.dropify').dropify({
            messages: {
                'default': 'Drag and drop a file here or click',
                'replace': 'Drag and drop or click to replace',
                'remove': 'Remove',
                'error': 'Ooops, something wrong appended.'
            }
        });
    </script>
}