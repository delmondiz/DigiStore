    <div class="container">
        @*<form class="row">*@
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "row" }))
        {
            <div class="col s12">
                <div class="row center">
                    <div class="col s12">
                        <h1>Sign up</h1>
                    </div>
                    <div class="col s12">
                        <h5>Already a member? <a href="~/Account/Login" class="btn waves-light blue darken-3 yellow-text accent-3 truncate" style="width: 100%">Log In!</a></h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 center">
                        <h2 style="margin-top: 0">Account Information</h2>
                        <div class="divider"></div>
                    </div>
                    <div class="input-field col s8">
                        @*<label for="username">Username*</label>*@
                        @Html.LabelFor(m => m.Username)
                        @*<input type="text" placeholder="coolone1234" id="username" required="required" />*@
                        @Html.TextBoxFor(m => m.Username, new { @placeholder="coolone1234", @id="username" })
                    </div>
                    <div class="col s4">
                        @Html.ActionLink("Check Username", null, null, new { @class= "btn btn-large waves-effect blue darken-3 yellow-text accent-3", @style= "padding: 0; width: 100%", @id="checkUsername" })
                        @*<a href="#" id="checkUsername" class="btn btn-large waves-effect blue darken-3 yellow-text accent-3" style="padding: 0; width: 100%">Check Username</a>*@
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        @*<label for="password">Password*</label>*@
                        @Html.LabelFor(m => m.Password)
                        @*<input type="password" placeholder="hunter2" id="password" required="required" />*@
                        @Html.PasswordFor(m => m.Password, new { @placeholder="hunter2", @id="password" })
                    </div>
                    <div class="input-field col s6">
                        @*<label for="confirmPassword">Confirm Password*</label>*@
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @*<input type="password" placeholder="hunter2" id="confirmPassword" required="required" />*@
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder="hunter2", @id="confirmPassword" })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        @*<label for="firstName">First Name*</label>*@
                        @Html.LabelFor(m => m.FirstName)
                        @*<input type="text" placeholder="Jane" id="firstName" required="required" />*@
                        @Html.TextBoxFor(m => m.FirstName, new { @placeholder="Jane", @id="firstName" })
                    </div>
                    <div class="input-field col s6">
                        @*<label for="lastName">Last Name*</label>*@
                        @Html.LabelFor(m => m.LastName)
                        @*<input type="text" placeholder="Doe" id="lastName" required="required" />*@
                        @Html.TextBoxFor(m => m.LastName, new { @placeholder="Doe", @id="lastName" })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @*<label for="email">E-mail*</label>*@
                        @Html.LabelFor(m => m.Email)
                        @*<input type="email" placeholder="example@email.com" id="email" required="required" />*@
                        @Html.TextBoxFor(m => m.Email, new { @placeholder="example@email.com", @id="email" })
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 center">
                        <h2 style="margin-top: 0">Personal Information</h2>
                        <div class="divider"></div>
                    </div>
                    <div class="input-field col s12 l4">
                        @*<label for="addressCity">Town/City*</label>*@
                        @Html.LabelFor(m => m.City)
                        @*<input type="text" placeholder="Toronto" id="addressCity" required="required" />*@
                        @Html.TextBoxFor(m => m.City, new { @placeholder="Toronto", @id="addressCity" })
                    </div>
                    <div class="input-field col s12 l4">
                        @*<label for="addressProvince">State/Province*</label>*@
                        @Html.LabelFor(m => m.Province)
                        @*<input type="text" placeholder="Ontario" id="addressProvince" required="required" />*@
                        @Html.TextBoxFor(m => m.Province, new { @placeholder="Ontario", @id="addressProvince" })
                    </div>
                    <div class="input-field col s12 l4">
                        @*<label for="addressPostal">Postal Code*</label>*@
                        @Html.LabelFor(m => m.PostalCode)
                        @*<input type="text" placeholder="H0H0H0" id="addressPostal" required="required" />*@
                        @Html.TextBoxFor(m => m.PostalCode, new { @placeholder="H0H0H0", @id="addressPostal" })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @*<label for="addressStreet">Address</label>*@
                        @Html.LabelFor(m => m.Street)
                        @*<input type="text" placeholder="9 Sussex Street" id="addressStreet" />*@
                        @Html.TextBoxFor(m => m.Street, new { @placeholder="9 Suxxex Street", @id="addressStreet" })
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <input type="submit" value="Sign up" id="submitSignup" class="btn waves-light blue darken-3 yellow-text accent-3" style="width: 100%" />
                    </div>
                </div>
            </div>
        }
        @*</form>*@
    </div>