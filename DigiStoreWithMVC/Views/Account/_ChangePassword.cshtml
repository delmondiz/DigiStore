@model DigiStoreWithMVC.Models.ChangePasswordViewModel
<div class="card">
    <div class="card-content">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <span class="card-title center"><i class="material-icons">security</i> Change Password</span>
            <hr />
            <div class="row">
                @Html.ValidationSummary("", new { @class = "red-text" })
                <div class="col s12 m6 l4 input-field">
                    @Html.LabelFor(m => m.OldPassword)
                    @Html.PasswordFor(m => m.OldPassword)
                    @TempData["resultPassword"]
                    @{TempData["resultPassword"] = null; }
                </div>
                <div class="col s12 m6 l4 input-field">
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword)
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
                <div class="col s12 m12 l4 input-field">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input type="submit" value="Change Password" class="col s12 m6 btn waves-effect blue darken-3 yellow-text accent-3" />
                </div>
            </div>
        }
    </div>
</div>