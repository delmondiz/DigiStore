@using DigiStoreWithMVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="container">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row" }))
    {
        @Html.AntiForgeryToken()
        <div class="col s12">
            <div class="row center">
                <div class="col s12">
                    <h1>Login</h1>
                </div>
                <div class="col s12">
                    <h5>Not a member? <br /> <a href="~/Account/Register" class="btn waves-light blue darken-3 yellow-text accent-3 truncate" style="width:100%">Sign up!</a></h5>
                </div>
            </div>
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "col s12 red-text center" })
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "example@email.com", @id = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "hunter2", @id = "password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input type="submit" value="Sign in" id="submitSignup" class="btn waves-light blue darken-3 yellow-text accent-3" style="width:100%" />
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <a href="~/Account/ForgotPassword" class="btn waves-light red lighten-1" style="width:100%">Forgot Password?</a>
                </div>
            </div>
        </div>
    }
</div>