@model DigiStoreWithMVC.Models.ChangePaymentViewModel
<div class="card">
    <div class="card-content">
        @using (Html.BeginForm("ChangePayment", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <span class="card-title center"><i class="material-icons">payment</i> Change Payment Info</span>
            <h4>@Html.ValidationSummary(true, "", new { @class = "col s12" })</h4>
            <div class="row">
                <div class="col s12 m6 input-field">
                    @Html.LabelFor(model => model.PaymentType)
                    @Html.EditorFor(model => model.PaymentType, new { htmlAttributes = new { @class = "form-control", @text = ViewData["paymentType"], @placeholder = Model.PaymentType } })
                    @Html.ValidationMessageFor(model => model.PaymentType, "", new { @class = "red-text" })
                </div>
                <div class="col s12 m6 input-field">
                    @Html.LabelFor(model => model.AccountNumber)
                    @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @text = ViewData["accountNumber"], @placeholder = Model.AccountNumber } })
                    @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "red-text" })
                </div>
                <div class="row col s12">
                    <input type="submit" value="Save" class="btn waves-effect blue darken-3 yellow-text accent-3" />
                </div>
            </div>
        }
    </div>
</div>