@model DigiStoreWithMVC.Models.User
@{
    ViewBag.Title = Model.UserName + "'s Profile";
}
<div class="container">
    <div class="section">
        <div class="row">

            <div class="col s12 m12 l12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">@Model.UserName's Profile</span>
                        <h4 class="center green-text">@TempData["resultMessage"]</h4>
                        @{TempData["resultMessage"] = null; }
                    </div>
                </div>
            </div>

            <div class="col s12 m12 l12">
                @Html.Partial("_UserDetails", new DigiStoreWithMVC.Models.UserDetailsViewModel(Model))
            </div>

            <div class="col s12 m12 l12">
                @Html.Partial("ChangePassword", new DigiStoreWithMVC.Models.ChangePasswordViewModel())
            </div>

            <div class="col s12 m12 l12">
                @Html.Partial("_ChangePayment", new DigiStoreWithMVC.Models.ChangePaymentViewModel(Model.PaymentMethods.FirstOrDefault()))
            </div>
        </div>
    </div>
</div>
